<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- WiFi Icon -->
    <ImageView
        android:id="@+id/ivWifiIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_wifi"
        android:contentDescription="WiFi Network" />

    <!-- Network Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNetworkName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Network Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvNetworkSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvNetworkSignal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-50 dBm"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

    </LinearLayout>

    <!-- Signal Strength Indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="8dp">

        <View
            android:id="@+id/signalBar1"
            android:layout_width="3dp"
            android:layout_height="8dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/signal_bar" />

        <View
            android:id="@+id/signalBar2"
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/signal_bar" />

        <View
            android:id="@+id/signalBar3"
            android:layout_width="3dp"
            android:layout_height="16dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/signal_bar" />

        <View
            android:id="@+id/signalBar4"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:background="@drawable/signal_bar" />

    </LinearLayout>

    <!-- Connect Button -->
    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:textSize="12sp"
        android:minWidth="80dp"
        style="@style/Widget.Material3.Button.TextButton" />

</LinearLayout>
